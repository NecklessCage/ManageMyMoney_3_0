<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_start_page_expense"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.05"
        android:background="@color/primary_dark"
        android:gravity="center"
        android:text="@string/start_page_title"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <ListView
        android:id="@+id/list_view_weekly_expense"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:clickable="false" />

    <TextView
        android:id="@+id/text_view_start_page_income"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.05"
        android:background="@color/primary_dark"
        android:gravity="center"
        android:text="@string/start_page_income"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <ListView
        android:id="@+id/list_view_this_month_income"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:clickable="false" />

    <Button
        android:id="@+id/btn_reset_db"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:text="Reset DB" />

</LinearLayout>