<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_view_list_item_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:minHeight="@dimen/view_min_height"
        android:textColor="@color/text_primary"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text_view_list_item_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:minHeight="@dimen/view_min_height"
        android:padding="@dimen/padding_list_item"
        android:textColor="@color/text_primary" />

    <View style="@style/vertical_divider" />

    <TextView
        android:id="@+id/text_view_list_item_division"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:minHeight="@dimen/view_min_height"
        android:padding="@dimen/padding_list_item"
        android:textColor="@color/text_primary" />

    <View style="@style/vertical_divider" />

    <TextView
        android:id="@+id/text_view_list_item_category"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:minHeight="@dimen/view_min_height"
        android:padding="@dimen/padding_list_item"
        android:textColor="@color/text_primary" />

    <View style="@style/vertical_divider" />

    <TextView
        android:id="@+id/text_view_list_item_amount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical|right"
        android:minHeight="@dimen/view_min_height"
        android:padding="@dimen/padding_list_item"
        android:textColor="@color/text_primary" />
</LinearLayout>