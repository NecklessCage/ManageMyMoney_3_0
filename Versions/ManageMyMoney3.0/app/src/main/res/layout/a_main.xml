<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="@dimen/app_margin"
    tools:context="com.bupi.ha.mmm_3_0.ActivityMain">

    <include layout="@layout/content_main" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_snapshot"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_alignLeft="@+id/fam"
        android:layout_alignStart="@+id/fam"
        android:layout_alignTop="@+id/fam"
        app:backgroundTint="@color/accent"
        app:srcCompat="@drawable/high_voltage" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_report"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_alignLeft="@+id/fam"
        android:layout_alignStart="@+id/fam"
        android:layout_alignTop="@+id/fam"
        app:backgroundTint="@color/accent"
        app:srcCompat="@drawable/pie_chart" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_income"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_alignLeft="@+id/fam"
        android:layout_alignStart="@+id/fam"
        android:layout_alignTop="@+id/fam"
        app:backgroundTint="@color/accent"
        app:srcCompat="@drawable/dollar_symbol" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_expense"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_alignLeft="@+id/fam"
        android:layout_alignStart="@+id/fam"
        android:layout_alignTop="@+id/fam"
        app:backgroundTint="@color/accent"
        app:srcCompat="@drawable/pencil" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fam"
        android:layout_width="@dimen/fab_size"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="10dp"
        app:backgroundTint="@color/accent"
        app:srcCompat="@drawable/caret_arrow_left" />

</RelativeLayout>